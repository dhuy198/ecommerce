    <div class="relative rounded-3xl overflow-hidden shadow-lg">
      <%= image_tag 'home1.jpg', class: "w-full h-full object-cover" %>
      <%= link_to products_path do %>
        <div class="absolute bottom-4 left-4">
          <button class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow hover:scale-105 transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>
    <div class="flex flex-col gap-6">
      <!-- Pretium Elite -->
      <div class="relative bg-[#d5e6e5] rounded-3xl flex flex-col items-center justify-between h-full shadow ">
        <%= image_tag 'home2.jpg', class: "w-full h-full object-cover rounded-3xl" %>
        <%= link_to products_path do %>
          <div class="absolute bottom-4 left-4">
            <button class="w-10 h-10 bg-white rounded-full flex items-center justify-center shadow hover:scale-105 transition">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-gray-800" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </button>
          </div>
        <% end %>
      </div>
      <!-- 25% OFF Box -->
      <div class="bg-[#234640] text-white rounded-3xl p-6 text-center flex flex-col items-center justify-center h-full shadow">
        <h5 class="text-xl font-bold mb-2">25% OFF</h5>
        <%= link_to "Explore Now", products_path, class: "bg-white text-[#234640] px-5 py-2 rounded-full text-sm font-medium hover:bg-gray-100 transition" %>
      </div>
    </div>
  </div>
</div>
