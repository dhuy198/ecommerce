<div class="bg-[#f1f8f7] rounded-3xl p-10 max-w-7xl mx-auto my-12 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
  <!-- Left Column -->
  <div>
    <h2 class="text-4xl font-extrabold text-gray-900 leading-tight mb-6">
      Exquisite design<br />
      combined with<br />
      functionalities
    </h2>
    <p class="text-gray-600 mb-6">
      Pellentesque ullamcorper dignissim condimentum volutpat consequat mauris nunc lacinia quis.
    </p>
    <!-- Expert Section -->
    <div class="flex items-center bg-white rounded-full px-4 py-2 shadow w-max mb-6">
      <%= link_to about_path, class: "text-sm text-gray-700 font-medium" do %>
        <span class="ml-4 text-sm text-gray-700 font-medium">Contact with our expert</span>
      <% end %>
    </div>
    <!-- Shop Now Button -->
    <%= link_to "Shop Now", products_path, class: "inline-block bg-[#0f2d21] text-white px-6 py-3 rounded-full font-medium hover:bg-[#244033] transition" %>
