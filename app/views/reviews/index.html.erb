<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="flex items-center justify-between mb-8">
      <h1 class="text-3xl font-bold">All Reviews</h1>
      <div class="flex space-x-2">
        <%= link_to "High Rated", reviews_path(filter: 'high'), 
            class: "px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700" %>
        <%= link_to "Low Rated", reviews_path(filter: 'low'), 
            class: "px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700" %>
        <%= link_to "All", reviews_path, 
            class: "px-4 py-2 bg-gray-600 text-white rounded-md hover:bg-gray-700" %>
      </div>
    </div>
    <% if @reviews.any? %>
      <div class="space-y-4">
        <% @reviews.each do |review| %>
          <%= render 'review', review: review %>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-gray-400 text-6xl mb-4">â˜…</div>
        <h3 class="text-xl font-semibold text-gray-600 mb-2">No reviews yet</h3>
        <p class="text-gray-500">Be the first to write a review!</p>
      </div>
    <% end %>
  </div>
</div>
 