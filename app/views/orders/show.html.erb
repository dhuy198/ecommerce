<% content_for :title, "Order details ##{@order.id}" %>
<div class="min-h-screen bg-gradient-to-b from-teal-50 to-white py-10 px-4">
  <div class="max-w-4xl mx-auto bg-white shadow-2xl rounded-2xl p-8 border border-teal-100">
    <h1 class="text-3xl font-bold text-teal-800 mb-6 flex items-center gap-2">
      Order details
    </h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8 text-gray-700 text-base">
      <div>
        <p><span class="font-semibold text-gray-600">Order id:</span> <%= @order.id %></p>
        <p><span class="font-semibold text-gray-600">Status:</span> <%= @order.status.capitalize %></p>
      </div>
      <div>
        <p><span class="font-semibold text-gray-600">Order date:</span>
          <%= @order.created_at.strftime("%d/%m/%Y %H:%M") %></p>
        <p class="font-bold"><span class="font-semibold text-gray-600">Total:</span>
          <%= number_to_currency(@order.total)%></p>
      </div>
    </div>
    <h2 class="text-xl font-semibold text-teal-700 mb-4">Product:</h2>
    <div class="divide-y divide-gray-200">
      <% @order.order_items.each do |item| %>
        <div class="flex items-center py-4">
          <div class="w-16 h-16 bg-white border border-gray-300 rounded-lg shadow-sm flex items-center justify-center overflow-hidden mr-4">
            <% if item.product.images.attached? %>
              <%= image_tag item.product.images.first, class: "w-full h-full object-contain p-1" %>
            <% else %>
              <div class="w-full h-full bg-gray-100 text-gray-400 flex items-center justify-center text-xs">
                No Image
              </div>
            <% end %>
          </div>
          <div class="flex-1">
            <p class="text-gray-800 font-medium"><%= item.product.name %></p>
            <p class="text-sm text-gray-500">Quantity: <%= item.quantity %></p>
          </div>
          <div class="text-right font-semibold text-teal-600">
            <%= number_to_currency(item.product.price * item.quantity) %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-10 text-right">
      <%= link_to "← Back", orders_path,
          class: "inline-block text-sm font-medium text-teal-700 hover:text-teal-900 hover:underline transition" %>
    </div>
  </div>
</div>
