<% if notice %>
  <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
    <%= notice %>
  </div>
<% end %>
<% content_for :title, @product.name %>
<div class="bg-white">
  <div class="pt-6">
    <!-- Breadcrumb -->
    <nav aria-label="Breadcrumb">
      <ol role="list" class="mx-auto flex max-w-2xl items-center space-x-2 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
        <li>
          <div class="flex items-center">
            <%= link_to "Home", root_path, class: "mr-2 text-sm font-medium text-gray-900 hover:text-gray-700" %>
            <svg viewBox="0 0 16 20" width="16" height="20" fill="currentColor" aria-hidden="true" class="h-5 w-4 text-gray-300">
              <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z" />
            </svg>
          </div>
        </li>
        <li>
          <div class="flex items-center">
            <%= link_to "Products", products_path, class: "mr-2 text-sm font-medium text-gray-900 hover:text-gray-700" %>
            <svg viewBox="0 0 16 20" width="16" height="20" fill="currentColor" aria-hidden="true" class="h-5 w-4 text-gray-300">
              <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z" />
            </svg>
          </div>
        </li>
        <% if @product.category %>
          <li>
            <div class="flex items-center">
              <%= link_to @product.category.name, category_path(@product.category), class: "mr-2 text-sm font-medium text-gray-900 hover:text-gray-700" %>
              <svg viewBox="0 0 16 20" width="16" height="20" fill="currentColor" aria-hidden="true" class="h-5 w-4 text-gray-300">
                <path d="M5.697 4.34L8.98 16.532h1.327L7.025 4.341H5.697z" />
              </svg>
            </div>
          </li>
        <% end %>
        <li class="text-sm">
          <span aria-current="page" class="font-medium text-gray-500"><%= @product.name %></span>
        </li>
      </ol>
    </nav>
    <div class="mx-auto mt-6 max-w-2xl sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:gap-8 lg:px-8">
      <% @product.images.each_with_index do |image, index| %>
        <% case index %>
        <% when 0 %>
          <%= image_tag image, class: "row-span-2 aspect-[3/4] size-full rounded-lg object-scale-down max-lg:hidden" %>
        <% when 1 %>
          <%= image_tag image, class: "col-start-2 aspect-[3/2] size-full rounded-lg object-scale-down max-lg:hidden" %>
        <% when 2 %>
          <%= image_tag image, class: "col-start-2 row-start-2 aspect-[3/2] size-full rounded-lg object-scale-down max-lg:hidden" %>
        <% when 3 %>
          <%= image_tag image, class: "row-span-2 aspect-[4/5] size-full object-scale-down sm:rounded-lg lg:aspect-[3/4]" %>
        <% else %>
          <%= image_tag image, class: "aspect-video w-full rounded-lg object-scale-down" %>
        <% end %>
      <% end %>
    </div>
    <!-- Product info -->
    <div class="mx-auto max-w-2xl px-4 pt-10 pb-16 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto_auto_1fr] lg:gap-x-8 lg:px-8 lg:pt-16 lg:pb-24">
      <div class="lg:col-span-2 lg:border-r lg:border-gray-200 lg:pr-8">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl"><%= @product.name %></h1>
      </div>
      <!-- Options -->
      <div class="mt-4 lg:row-span-3 lg:mt-0">
        <h2 class="sr-only">Product information</h2>
        <p class="text-3xl tracking-tight text-gray-900">$<%= number_with_precision(@product.price, precision: 2) %></p>
        <!-- Stock information -->
        <div class="mt-4">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @product.stock > 0 ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
            <%= @product.stock > 0 ? "In Stock (#{@product.stock})" : "Out of Stock" %>
          </span>
        </div>
        <!-- Category -->
        <% if @product.category %>
          <div class="mt-2">
            <span class="text-sm text-gray-500">Category: <%= @product.category.name %></span>
          </div>
        <% end %>
        <!-- Reviews placeholder -->
        <div class="mt-6">
          <h3 class="sr-only">Reviews</h3>
          <div class="flex items-center">
            <div class="flex items-center">
              <!-- 5 stars -->
              <% 5.times do |i| %>
                <svg viewBox="0 0 20 20" fill="currentColor" data-slot="icon" aria-hidden="true" class="size-5 shrink-0 <%= i < 4 ? 'text-gray-900' : 'text-gray-200' %>">
                  <path d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401Z" clip-rule="evenodd" fill-rule="evenodd" />
                </svg>
              <% end %>
            </div>
            <p class="sr-only">4 out of 5 stars</p>
            <a href="#" class="ml-3 text-sm font-medium text-indigo-600 hover:text-indigo-500">0 reviews</a>
          </div>
        </div>
        <!-- Add to cart form -->
        <form class="mt-10">
          <!-- Quantity selector -->
          <div class="mt-10">
            <div class="flex items-center justify-between">
              <h3 class="text-sm font-medium text-gray-900">Quantity</h3>
            </div>
            <div class="mt-4">
              <div class="flex items-center border border-gray-300 rounded-md">
                <button type="button" class="p-2 text-gray-600 hover:text-gray-900" onclick="decreaseQuantity()">
                  <i class="fas fa-minus text-sm"></i>
                </button>
                <input type="number" id="quantity" name="quantity" value="1" min="1" max="<%= @product.stock %>" class="flex-1 text-center border-0 focus:ring-0 text-sm font-medium">
                <button type="button" class="p-2 text-gray-600 hover:text-gray-900" onclick="increaseQuantity()">
                  <i class="fas fa-plus text-sm"></i>
                </button>
              </div>
            </div>
          </div>
          <!-- Add to cart button -->
          <button type="submit" class="mt-10 flex w-full items-center justify-center rounded-md border border-transparent bg-indigo-600 px-8 py-3 text-base font-medium text-white hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-hidden disabled:opacity-50 disabled:cursor-not-allowed" <%= 'disabled' if @product.stock <= 0 %>>
            <%= @product.stock > 0 ? 'Add to cart' : 'Out of Stock' %>
          </button>
            <!-- Back to products -->
            <div class="mt-4">
              <%= link_to products_path, class: "flex w-full items-center justify-center rounded-md border border-gray-300 bg-white px-8 py-3 text-base font-medium text-gray-700 hover:bg-gray-50 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:outline-hidden" do %>
                <i class="fas fa-arrow-left mr-2"></i>
                Back to Products
              <% end %>
            </div>
          </form>
        </div>
        <div class="py-10 lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 lg:pt-6 lg:pr-8 lg:pb-16">
          <!-- Description and details -->
          <div>
            <h3 class="sr-only">Description</h3>
            <div class="space-y-6">
              <p class="text-base text-gray-900"><%= @product.description %></p>
            </div>
          </div>
          <!-- Product highlights -->
          <div class="mt-10">
            <h3 class="text-sm font-medium text-gray-900">Product Details</h3>
            <div class="mt-4">
              <ul role="list" class="list-disc space-y-2 pl-4 text-sm">
                <li class="text-gray-400">
                  <span class="text-gray-600">Price: $<%= number_with_precision(@product.price, precision: 2) %></span>
                </li>
                <li class="text-gray-400">
                  <span class="text-gray-600">Stock: <%= @product.stock %> units</span>
                </li>
                <% if @product.category %>
                  <li class="text-gray-400">
                    <span class="text-gray-600">Category: <%= @product.category.name %></span>
                  </li>
                <% end %>
                <li class="text-gray-400">
                  <span class="text-gray-600">Product ID: <%= @product.id %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
