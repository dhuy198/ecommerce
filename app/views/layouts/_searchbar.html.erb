<%= form_with url: "/", method: :get, local: true, role: "search", class: "w-full max-w-md relative" do %>
  <%= search_field_tag :q, nil,
    placeholder: "Search",
    class: "w-full pl-4 pr-10 py-2 rounded-full border border-gray-200 text-gray-700 placeholder-gray-400 shadow-sm focus:outline-none focus:ring-2 focus:ring-[#c6dfe2]" %>
  <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">
    <i class="fas fa-search"></i>
  </button>
<% end %>
