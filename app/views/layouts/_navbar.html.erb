<!-- Top Bar -->
<div class="w-full  bg-[#152420] text-white h-[40px]">
  <div class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto px-4 py-2">
    <!-- Navigation Menu -->
    <nav class="flex gap-4 text-sm">
      <%=link_to 'Showrooms', '#', class: 'hover:text-white text-[13px] text-[#E4EEF094]'%>
      <%=link_to 'Custom Work', '#', class: 'hover:text-white text-[13px] text-[#E4EEF094]'%>
      <%=link_to 'Gift Cards', '#', class: 'hover:text-white text-[13px] text-[#E4EEF094]'%>
    </nav>
    <!-- Social Icons -->
    <div class="flex gap-4 text-white text-lg">
      <%= link_to '#', aria: { label: 'Facebook' } do %>
        <i class="text-[#E4EEF094] hover:text-white text-[14px] mr-[5px] fab fa-facebook-f"></i>
      <% end %>
      <%= link_to '#', aria: { label: 'Twitter' } do %>
        <i class="text-[#E4EEF094] hover:text-white text-[14px] mr-[5px] fab fa-twitter"></i>
      <% end %>
      <%= link_to '#', aria: { label: 'Instagram' } do %>
        <i class="text-[#E4EEF094] hover:text-white text-[14px] mr-[5px] fab fa-instagram"></i>
      <% end %>
      <%= link_to '#', aria: { label: 'YouTube' } do %>
        <i class="text-[#E4EEF094] hover:text-white text-[14px] mr-[5px] fab fa-youtube"></i>
      <% end %>
      <%= link_to '#', aria: { label: 'WhatsApp' } do %>
        <i class="text-[#E4EEF094] hover:text-white text-[14px] fab fa-whatsapp"></i>
      <% end %>
    </div>
  </div>
</div>
<!-- Second-->
<div class="bg-white w-full ">
  <div class="max-w-screen-xl mx-auto flex items-center justify-between px-4 py">
    <!-- Logo -->
    <div class="flex items-center gap-1">
      <%= link_to root_path, class: "flex items-center gap-2 text-xl font-semibold text-gray-800" do %>
        <%= image_tag "logo.jpg", alt: "Furniture Logo", class: " w-auto max-h-[120px]" %>
      <% end %>
    </div>
    <!-- Search bar -->
    <%= form_with url: "/", method: :get, local: true, role: "search", class: "w-full max-w-md relative" do %>
      <%= search_field_tag :q, nil,
        placeholder: "Search",
        class: "w-full pl-4 pr-10 py-2 rounded-full border border-gray-200 text-gray-700 placeholder-gray-400 shadow-md outline-none ring-2 ring-[#c6dfe2]" %>
      <button type="submit" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700">
        <i class="fas fa-search"></i>
      </button>
    <% end %>
    <!-- Navigation + Icons -->
    <div class="flex items-center gap-6 text-gray-700 text-sm">
      <nav class="hidden md:flex items-center gap-6 mr-[60px]">
        <%= link_to "Home", root_path, class: "hover:text-primary py-[50px]" %>
        <%= link_to "Shop", "#", class: "hover:text-primary relative group py-[50px]" %>
        <%= link_to "About Us", about_path, class: "hover:text-primary py-[50px]" %>
      </nav>
      <!-- Icons -->
      <div class="flex items-center gap-4 text-lg">
        <%= link_to "#", aria: { label: "User" } do %>
          <i class="far fa-user"></i>
        <% end %>
        <%= link_to "#", aria: { label: "Wishlist" } do %>
          <i class="far fa-heart"></i>
        <% end %>
        <%= link_to "#", class: "relative", aria: { label: "Cart" } do %>
          <%= image_tag 'cart.png'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
